{
    "name": "free-plan-server-limit",
    "display_name": "Free Plan Server Limit",
    "version": "1.0.1",
    "author": "AshleyUK",
    "description": "Limits users to a configurable number of free servers.",
    "license": "MIT",
    "pteroca": {
        "min": "0.6.0",
        "max": "1.0.0"
    },
    "capabilities": ["ui", "migrations"],
    "bootstrap_class": "Plugins\\FreePlanServerLimit\\Bootstrap",
    "config_schema": {
        "free_product_ids": {
            "type": "string",
            "default": "1",
            "hierarchy": "general",
            "required": false
        },
        "max_free_servers": {
            "type": "integer",
            "default": 1,
            "hierarchy": "general",
            "required": false
        },
        "error_message": {
            "type": "string",
            "default": "You have reached the maximum number of servers allowed on the free plan.",
            "hierarchy": "general",
            "required": false
        }
    }
}
